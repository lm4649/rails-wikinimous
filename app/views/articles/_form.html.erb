<%= simple_form_for @article do |f| %>
  <%= f.input :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br><br>
  <%= f.submit class: "btn btn-success" %>
  <br><br>
  <% if @article.id %>
    <%= link_to "Show |", article_path(@article)  %>
  <% end %>
  <%= link_to "Back", articles_path  %>
<% end %>
